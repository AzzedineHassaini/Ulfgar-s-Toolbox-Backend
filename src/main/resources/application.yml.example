spring:
  datasource:
    url: jdbc:mysql://localhost:<port>/<DB_Name>
    username: <username>
    password: <password>
    driver-class-name: com.mysql.cj.jdbc.Driver

  jpa:
    defer-datasource-initialization: true
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        format_sql: true

  sql:
    init:
      mode: always
server:
  port: 8080